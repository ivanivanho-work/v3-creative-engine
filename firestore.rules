rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Jobs collection
    match /jobs/{jobId} {
      // Allow read for everyone (for testing)
      // TODO: Add authentication in Phase 2
      allow read: if true;

      // Allow create for everyone (Cloud Functions use admin SDK which bypasses rules)
      allow create: if true;

      // Allow update/delete only for cloud functions (via admin SDK)
      allow update, delete: if false;
    }

    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
